{
  "ProML Document": {
    "prefix": "proml-doc",
    "body": [
      "META:",
      "  id: \"${1:com.example.prompt}\"",
      "  version: \"${2:0.1.0}\"",
      "  repro: \"${3:strict}\"",
      "  description: \"${4:Describe the prompt}\"",
      "  profiles:",
      "    default:",
      "      provider: \"${5:openai}\"",
      "      model: \"${6:gpt-4.1-mini}\"",
      "      temperature: ${7:0.2}",
      "      max_output_tokens: ${8:512}",
      "      cost_budget: ${9:0.02}",
      "      cache:",
      "        strategy: \"simple\"",
      "        scope: \"shared\"",
      "        ttl: ${10:15m}",
      "",
      "INPUT:",
      "  ${11:input_name}:",
      "    type: ${12:string}",
      "    description: \"${13:Describe input}\"",
      "    required: ${14:true}",
      "",
      "OUTPUT:",
      "  json_schema:",
      "    $id: \"schema:${1:com.example.prompt}:output\"",
      "    version: \"${2:0.1.0}\"",
      "    schema:",
      "      type: object",
      "      required: [${15:result}]",
      "      properties:",
      "        ${15:result}:",
      "          type: ${16:string}",
      "  regex: null",
      "  grammar: null",
      "",
      "POLICY:",
      "  imports: []",
      "  local: {}",
      "",
      "PIPELINE:",
      "  steps:",
      "    - id: ${17:main}",
      "      uses: ${18:module.com.example@^1.0.0}",
      "      inputs:",
      "        ${11:input_name}: $input.${11:input_name}",
      "      outputs:",
      "        ${15:result}: ${16:string}",
      "      expects:",
      "        ${15:result}: ${16:string}",
      "  edges: []",
      "",
      "TEST:",
      "  - name: \"${19:smoke test}\"",
      "    input:",
      "      ${11:input_name}: \"${20:Hello}\"",
      "    mock_output:",
      "      ${15:result}: \"${21:Hello}\"",
      "    assert:",
      "      - type: schema",
      "      - type: equals",
      "        path: $.${15:result}",
      "        value: \"${21:Hello}\""
    ],
    "description": "Create a ProML document skeleton"
  }
}
